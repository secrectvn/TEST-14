<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>	

	<record id="sh_import_product_tmpl_wizard" model="ir.ui.view">
		<field name="name">sh.import.product.tmpl.wizard</field>
		<field name="model">import.product.tmpl.wizard</field>
		<field name="arch" type="xml">
			<form string="Import Product Templates">
				<group>				
					<field name="import_type" widget="radio"/>
					<field name="method" widget="radio"/>
					<field name="product_update_by" widget="radio" attrs="{'invisible': [('method', '=', 'create')], 'required': [('method', '=', 'write')]}" />										
					<field name="file"/>					
				</group>				
			<footer>
				<button name="import_product_tmpl_apply" string="Apply" type="object" class="btn-primary" />
				<button string="Cancel" class="btn-default" special="cancel" />
			</footer>
							
			</form>
		</field>
	</record>
	

  <record id="sh_import_product_tmpl_action" model="ir.actions.act_window">
  	<field name="name">Import Product Templates</field>
  	<field name="res_model">import.product.tmpl.wizard</field>
  	<field name="view_type">form</field>
  	<field name="view_id" ref="sh_import_product_tmpl_wizard"/>
  	<field name="target">new</field>
  </record>
	
</data>	
</odoo>
